<fieldset id="{{uid}}-filter-price" class="filter-choice filter-price">
    <legend>{{ lang.filterpricetask }}</legend>
    <div>
        <input type="radio" id="{{uid}}-filter-price-none" name="{{uid}}-filter-price" value="" checked>
        <label for="{{uid}}-filter-price-none">{{ lang.filterpricenone }}</label>
    </div>
    <div>
        <input type="radio" id="{{uid}}-filter-price-100" name="{{uid}}-filter-price" value="100">
        <label for="{{uid}}-filter-price-100">{{ lang.filterprice100 }}</label>
    </div>
    <div>
        <input type="radio" id="{{uid}}-filter-price-300" name="{{uid}}-filter-price" value="300">
        <label for="{{uid}}-filter-price-300">{{ lang.filterprice300 }}</label>
    </div>
    <div>
        <input type="radio" id="{{uid}}-filter-price-1000" name="{{uid}}-filter-price" value="1000">
        <label for="{{uid}}-filter-price-1000">{{ lang.filterprice1000 }}</label>
    </div>
</fieldset>