{{ #occupation }}
<h2>{{ lang.skillsstep:headingwithoccupation }}</h2>
{{ /occupation }}
{{ ^occupation }}
<h2>{{ lang.skillsstep:headingwithoutoccupation }}</h2>
{{ /occupation }}
<dialog class="help-modal modal">
    <article>{{{ lang.skillsstep:help }}}</article>
    <button type="button" class="close-help-modal-btn btn-link" title="{{ lang.help:understood }}">{{ lang.help:understood }}</button>
</dialog>
<button type="button" class="open-help-modal-btn btn-link" title="{{ lang.help }}"><i class="icon help-icon"></i>{{lang.skillsstep:helpintro}}</button>
<p class="skill-counter"></p>
<section class="autocomplete-box">
    <div class="autocomplete-box__input">
        <i class="icon search-icon"></i>
        <input type="text" placeholder="{{ lang.skillsstep:inputplaceholder }}" name="esco-skill-select"
            id="esco-skill-select" class="scout-autocomplete" esco-scheme="member-skills,skills-hierarchy,sachstichwort"
            max="50" onlyrelevant=True>
        <button class="clear-input" title="{{ lang.clearinput }}"><i class="icon close-icon"></i></button>
    </div>
    <output name="esco-skill-select" for="esco-skill-select"></output>
</section>
<section class="selectable-skills">
    <article class="otherskills">
        {{ #occupation }}
        <h4>{{ lang.skillsstep:otherskills }} </h4>
        {{ /occupation }}
        {{ ^occupation }}
        <h4>{{ lang.skillsstep:selectedskills }} </h4>
        {{ /occupation }}
        <ul></ul>
    </article>
    {{ #occupation }}
    <article class="occupationskills">
        <h4>{{ lang.skillsstep:skillsfor }} {{ . }}</h4>
        <ul></ul>
    </article>
    {{ /occupation }}
</section>